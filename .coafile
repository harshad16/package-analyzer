[all]
bears = LineCountBear, FilenameBear
files = **.py, **.yaml, **.rst
file_naming_convention = snake
ignore = **/__pycache__/**, **/__pycache__, __pycache__, __pycache__/**, **/*.pyc, *.pyc, openshift/*.yaml
max_lines_per_file = 1000
max_line_length = 120

[all.python]
bears = PycodestyleBear, PyDocStyleBear
files = **.py
language = Python
editor = vim
ignore = setup.py, tests/**, docs/source/conf.py

[all.yaml]
bears = YAMLLintBear
files = **.yaml
file_naming_convention = camel
ignore = .zuul.yaml
max_line_length = 120

[zuul.yaml]
bears = YAMLLintBear
files = .zuul.yaml
max_line_length = 180
